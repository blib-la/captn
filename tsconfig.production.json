{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@captn/joy/*": [
        "./packages/joy/src/*"
      ],
      "@captn/react/*": [
        "./packages/react/src/*"
      ],
      "@captn/theme/*": [
        "./packages/theme/src/*"
      ],
      "@captn/utils/*": [
        "./packages/utils/src/*"
      ]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["/**/node_modules", "/node_modules"]
}
